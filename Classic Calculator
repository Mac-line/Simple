
def add(num1, num2):
    return num1 + num2

def subtract(num1, num2):
    return num1 - num2

def multiply(num1, num2):
    return  num1 * num2

def divide(num1, num2):
    if num2 == 0:
       return 'Syntax Error'
    else:
        return num1 / num2

print("1. Addition")
print("2. Subtraction")
print("3. Multiplication")
print("4. Division")

choice = int(input("Choose a number from 1 to 4: "))
FirstNum = float(input("Enter the first value: "))
SecondNum = float(input("Enter the second value: "))

if 4<choice<1:
    print("Invalid choice")
elif choice == 1:
    print('The answer is ', add(FirstNum, SecondNum))
elif choice == 2:
    print('The answer is ', subtract(FirstNum, SecondNum))
elif choice == 3:
    print('The answer is ', multiply(FirstNum, SecondNum))
elif choice == 4:
    print('The answer is ', divide(FirstNum, SecondNum))
